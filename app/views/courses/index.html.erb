<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <% @courses.each do |course| %>
    <hr>
    <div class="col-sm-8 col-xs-12">
      <h2 class="center-text"><%= link_to course.title, course_path(course) %></h2>
      <br>
      <div class="col-sm-6 col-xs-12">
        <%= course.description %>
      </div>
      <div class="col-sm-6 col-xs-12 text-center">
        <%= link_to 'More Details...', course_path(course), :class => 'btn btn-primary btn-large' %>
      </div>      
    </div>
    <div class="col-sm-4 col-xs-12">
        <%= image_tag course.image, :class => 'img-responsive' %>
    </div>
    <br class="clr">
  <% end %>
</div>